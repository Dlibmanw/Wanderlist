<p id="notice"><%= notice %></p>
<div class="container-fluid">

  <div class="row lead">
    <div class="col-md-4">
      <div class="sticky-top mb-5 p-3">
        <h1><u>Routes</u></h1>
        <br>
        <%= link_to 'Create route', new_route_path, class: 'btn btn-lg btn-outline-dark rounded-0' %>
      </div>
    </div>
    <div class="col-md-8">
      <img src="https://images.pexels.com/photos/460672/pexels-photo-460672.jpeg">
    </div>
  </div>
  </div>


  <div class="mt-5 pt-5 grey-bg">
    <div class="container">
      <% @routes.each do |route| %>
        <div class="row p-4">
          <div class="route card rounded-0 border-0 m-auto p-3">
            <div class="card-header d-flex flex-wrap justify-content-between bg-transparent border-0">
              <h3 class="route-title"><%= link_to route.title, route, class: 'text-dark mr-5' %></h3>
              <p>Votes: <%= route.points %></p>
            </div>
            <div class="card-body">
              <p><%= route.description %></p>
              <%= link_to "View route", route, class: 'btn btn-lg btn-outline-dark rounded-0 float-right' %>
            </div> 
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>

